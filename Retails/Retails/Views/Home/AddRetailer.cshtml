@model Ardas.Models.Retailer.RetailerRequest

@{
    ViewBag.Title = "AddRetailer";
}

<h2>AddRetailer</h2>

<script src="~/Scripts/Core/Core.js"></script>
<script src="~/Scripts/Home/AddRetailerView.js"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    
    <div class="form-horizontal">
        <h4>RetailerRequest</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RetailerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RetailerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RetailerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isRoot, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    <input type="checkbox" id="isRoot"  class="checkbox" style="cursor:pointer" onchange="IsChecked()"  />
                    @Html.ValidationMessageFor(model => model.isRoot, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <img src="~/Images/loading.gif" id="load" style="display:none; margin: 0 auto" alt="Alternate Text" />

        <div class="form-group" id="AffiliatedRetailerBlock" style="display:block">
            <label class="control-label col-md-2">AffiliatedRetailer</label>
            <div class="col-md-10" id="AffiliatedRetailer">
                    
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Add Retailer" onclick="AddRetailers()"  class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "/")
</div>
